<h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-horizontal' } ) do |f| %>
  <%= devise_error_messages! %>

    <%= f.input :email, as: 'email', label: 'Email address', placeholder: 'user@example.com' %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :address1, label: "Address" %>
    <%= f.input :address2, label: "Address" %>
    <%= f.input :region, default: "Auckland", collection: [ "Auckland", "Wellington", "Christchurch" ] %>
    <%= f.input :country, default: "New Zealand", collection: [ "New Zealand", "Australia" ] %>
    <%= f.input :suburb %>
    <%= f.input :postcode %>
    <%= f.input :home_phone, as: 'tel' %>
    <%= f.input :mobile_phone, as: 'tel' %>
    <%= f.input :dob_day, label: 'Day' %> 
    <%= f.input :dob_month, label: 'Month' %>
    <%= f.input :dob_year, label: 'Year' %>

    <div class="form-actions">
      <%= f.submit "Sign up", class: "btn btn-primary " %>
    </div>
  
<% end %>

<%= render "devise/shared/links" %>
